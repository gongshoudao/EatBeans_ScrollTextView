<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <Button
            android:id="@+id/start"
            android:text="START"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/stop"
            android:text="STOP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <com.androidcycle.demo.ScrollTextView
        android:id="@+id/scroll_tv"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:background="#ccc"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:autoPlay="true"
        app:bottomString="Hello, ScrollTextView ScrollTextView ScrollTextView ScrollTextView"
        app:bottomTextColor="@android:color/holo_green_light"
        app:bottomTextSize="20sp"
        app:topString="Hello, ScrollTextView ScrollTextView ScrollTextView ScrollTextView"
        app:topTextColor="#33b5e5"
        app:topTextSize="@dimen/activity_horizontal_margin" />

</FrameLayout>
